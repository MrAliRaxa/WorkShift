<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:orientation="horizontal"
    android:weightSum="15.0">

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="5.0"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBackground"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/bg_round"
                android:tag="binding_1" />

            <TextView
                android:id="@+id/txtAbrev"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:ellipsize="none"
                android:fontFamily="@font/semi_bold"
                android:gravity="center"
                android:singleLine="true"
                android:tag="binding_2"
                android:textSize="@dimen/_9sdp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtShift"
            style="@style/statValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_4sdp"
            android:ellipsize="none"
            android:singleLine="true"
            android:tag="binding_3" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtCount"
        style="@style/statValue"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2.0"
        android:gravity="center"
        android:tag="binding_4" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTime"
            style="@style/statValue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:tag="binding_5" />

        <TextView
            android:id="@+id/txtExtraTime"
            style="@style/statValue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:tag="binding_6" />

        <TextView
            android:id="@+id/txtExtraTimePaid"
            style="@style/statValue3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:tag="binding_7" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtAmount"
        style="@style/statValue"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3.5"
        android:gravity="end"
        android:tag="binding_8" />

    <RelativeLayout
        android:id="@+id/rlSum"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5">

        <CheckBox
            android:id="@+id/cbGlobal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:button="@drawable/custom_checkbox"
            android:tag="binding_9" />
    </RelativeLayout>
</LinearLayout>