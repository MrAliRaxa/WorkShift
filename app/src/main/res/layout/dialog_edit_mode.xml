<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:orientation="vertical"
   >

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="0.0dip"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlue"
                    android:fontFamily="@font/semi_bold"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    style="@style/bgColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="@string/set_shift" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:gravity="center">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvShift"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@color/colorLight"
                    android:orientation="vertical">

                    <TextView
                        style="@style/bgColor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginRight="@dimen/_1sdp"
                        android:background="@color/colorWhite"
                        android:padding="@dimen/_4sdp"
                        android:text="@string/repeat_selected_range" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llTimes1"
                                android:layout_width="0.0dip"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_edit"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_2sdp"
                                android:paddingRight="@dimen/_2sdp">

                                <TextView
                                    android:id="@+id/txtTimes1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/muli"
                                    android:text="@string/_10_times"
                                    android:textColor="@color/colorDarkGray"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llTimes2"
                                android:layout_width="0.0dip"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_edit"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_2sdp"
                                android:paddingRight="@dimen/_2sdp">

                                <TextView
                                    android:id="@+id/txtTimes2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/muli"
                                    android:text="@string/_20_times"
                                    android:textColor="@color/colorDarkGray"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llTimes3"
                                android:layout_width="0.0dip"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_edit"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_2sdp"
                                android:paddingRight="@dimen/_2sdp">

                                <TextView
                                    android:id="@+id/txtTimes3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/muli"
                                    android:text="@string/_30_times"
                                    android:textColor="@color/colorDarkGray"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llTimes4"
                                android:layout_width="0.0dip"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_edit"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_2sdp"
                                android:paddingRight="@dimen/_2sdp">

                                <TextView
                                    android:id="@+id/txtTimes4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/muli"
                                    android:text="@string/_40_times"
                                    android:textColor="@color/colorDarkGray"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llFromTo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:background="@drawable/bg_edit"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txtFromTO"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/muli"
                                android:padding="@dimen/_4sdp"
                                android:text="@string/from_to"
                                android:textColor="@color/colorDarkGray"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@color/colorLight"
                    android:orientation="vertical">

                    <TextView
                        style="@style/bgColor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginRight="@dimen/_1sdp"
                        android:background="@color/colorWhite"
                        android:padding="@dimen/_4sdp"
                        android:text="@string/edit" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llSwapShift"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:background="@drawable/bg_edit"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txtSwapShuft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli"
                                android:padding="@dimen/_4sdp"
                                android:text="@string/swap_shifts"
                                android:textColor="@color/colorDarkGray"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llCut"
                                android:layout_width="0.0dip"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_edit"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/cut"
                                    app:tint="@color/colorDarkGray" />

                                <TextView
                                    android:id="@+id/txtCut"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:fontFamily="@font/muli"
                                    android:text="@string/cut"
                                    android:textColor="@color/colorDarkGray"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llCopy"
                                android:layout_width="0.0dip"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_edit"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/copy"
                                    app:tint="@color/colorDarkGray" />

                                <TextView
                                    android:id="@+id/txtCopy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:fontFamily="@font/muli"
                                    android:text="@string/copy"
                                    android:textColor="@color/colorDarkGray"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llPaste"
                                android:layout_width="0.0dip"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_edit"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/paste"
                                    app:tint="@color/colorDarkGray" />

                                <TextView
                                    android:id="@+id/txtPaste"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:fontFamily="@font/muli"
                                    android:text="@string/paste"
                                    android:textColor="@color/colorDarkGray"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llErase"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:background="@drawable/bg_cancel"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txtErase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli"
                                android:padding="@dimen/_4sdp"
                                android:text="@string/erase"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llEraseShifts"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/llEraseFirst"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_cancel"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txtEraseFirst"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli"
                                    android:padding="@dimen/_4sdp"
                                    android:text="@string/erase_shift_1"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llEraseSecond"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:layout_weight="1.0"
                                android:background="@drawable/bg_cancel"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txtEraseSecond"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli"
                                    android:padding="@dimen/_4sdp"
                                    android:text="@string/erase_shift_2"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>