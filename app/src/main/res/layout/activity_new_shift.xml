<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLight">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="fill_parent"
            android:layout_height="?actionBarSize"
            android:layout_toEndOf="@+id/ivCalendar"
            android:background="@color/colorPrimary"
            app:theme="@style/toolBar"
            app:titleTextColor="@color/colorDarkNavy" />

        <ImageView
            android:id="@+id/ivCalendar"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_8sdp"
            android:src="@drawable/ic_date2"
            app:tint="@color/colorDarkNavy" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llTab"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlTop"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:background="@drawable/bg_tab_border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVisual"
                    style="@style/tabTitle"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/bg_tab_selected_month"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/visual"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/txtSchedule"
                    style="@style/tabTitle"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/schedule"
                    android:textColor="@color/colorBlue" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@drawable/bg_layout">

                <LinearLayout
                    android:id="@+id/llName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_toStartOf="@+id/rlAbbrev"
                    android:orientation="vertical"
                    android:padding="@dimen/_6sdp">

                    <TextView
                        style="@style/shiftName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shift_name" />

                    <EditText
                        android:id="@+id/etShiftName"
                        style="@style/editText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edit"
                        android:hint="@string/shift_name"
                        android:paddingLeft="@dimen/_6sdp"
                        android:text="New" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlAbbrev"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_8sdp">

                    <ImageView
                        android:id="@+id/ivBackground"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/bg_round" />

                    <TextView
                        android:id="@+id/txtAbbrev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:ellipsize="none"
                        android:fontFamily="@font/bold"
                        android:padding="@dimen/_1sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_11ssp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llVisual"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@drawable/bg_layout"
                    android:orientation="vertical"
                    android:padding="@dimen/_6sdp">

                    <TextView
                        style="@style/shiftName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/abbreviation" />

                    <EditText
                        android:id="@+id/etShiftAbbrev"
                        style="@style/editText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edit"
                        android:hint="@string/abbreviation"
                        android:paddingLeft="@dimen/_6sdp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlBackGround"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@drawable/bg_layout"
                    android:padding="@dimen/_6sdp">

                    <TextView
                        style="@style/bgColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/background_color" />

                    <ImageView
                        android:id="@+id/ivBGColor"
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/bg_round"
                        app:tint="#fffddfdf" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBGColor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingRight="@dimen/_8sdp"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@drawable/bg_layout"
                    android:orientation="vertical"
                    android:padding="@dimen/_6sdp">

                    <TextView
                        style="@style/bgColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/text_color" />

                    <TextView
                        android:id="@+id/txtTextColor"
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:text="A"
                        android:textAlignment="center"
                        android:textColor="#ff000000" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTextColor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingRight="@dimen/_8sdp"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/bgColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_size" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/bg_layout"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_6sdp">

                        <Spinner
                            android:id="@+id/spinnerTextSize"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_30sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSchedule"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/colorLight"
                    android:orientation="vertical"
                    android:padding="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semi_bold"
                        android:text="@string/schedule"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:id="@+id/llShiftTime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llStartTime"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/from"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/start_time" />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_time"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/_6sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@drawable/clock"
                                        app:tint="@color/colorDarkNavy" />

                                    <TextView
                                        android:id="@+id/txtStartTime"
                                        style="@style/date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:text="10:00 AM" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llEndTime"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_weight="1.0"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/from"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/end_time" />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_time"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/_6sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@drawable/clock"
                                        app:tint="@color/colorDarkNavy" />

                                    <TextView
                                        android:id="@+id/txtEndTime"
                                        style="@style/date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:text="10:00 AM" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtEndAfterDay"
                            style="@style/shiftName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ends_after_the_day"
                            android:visibility="gone" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/swSplitShift"
                        style="@style/bgColor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="@string/split_shift" />

                    <LinearLayout
                        android:id="@+id/llSplitTime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llStartSplitTime"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/from"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/start_time" />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_time"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/_6sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@drawable/clock"
                                        app:tint="@color/colorDarkNavy" />

                                    <TextView
                                        android:id="@+id/txtStartSplitTime"
                                        style="@style/date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:text="10:00 AM" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llEndSplitTime"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_weight="1.0"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/from"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/end_time" />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_time"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/_6sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@drawable/clock"
                                        app:tint="@color/colorDarkNavy" />

                                    <TextView
                                        android:id="@+id/txtEndSplitTime"
                                        style="@style/date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:text="10:00 AM" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtEndAfterDaySplit"
                            style="@style/shiftName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ends_after_the_day"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llResetTime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etRestTime"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_time"
                            android:fontFamily="@font/muli"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="@dimen/_6sdp"
                            android:textAlignment="center"
                            android:textColor="@color/colorDarkNavy"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:fontFamily="@font/muli"
                            android:text="@string/rest_time_minutes"
                            android:textColor="@color/colorDarkGray"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llCalculate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/shiftName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:text="@string/shift_time" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etHour"
                            style="@style/editText"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:background="@drawable/bg_edit"
                            android:enabled="false"
                            android:inputType="number"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:fontFamily="@font/muli"
                            android:text="h"
                            android:textColor="@color/colorDarkNavy"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/etMinute"
                            style="@style/editText"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:background="@drawable/bg_edit"
                            android:enabled="false"
                            android:inputType="number"
                            android:textAlignment="center" />

                        <TextView
                            style="@style/shiftName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:text="m" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_layout"
                        android:orientation="vertical"
                        android:padding="@dimen/_6sdp">

                        <RelativeLayout
                            android:id="@+id/rlFirstAlarm"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/shiftName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/alarm_1" />

                            <CheckBox
                                android:id="@+id/cbFirstAlarm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:button="@drawable/custom_checkbox" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/llFirstAlarm"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp">

                                <LinearLayout
                                    android:id="@+id/llFirstBefore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:id="@+id/cbFirstBefore"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:button="@drawable/custom_checkbox" />

                                    <TextView
                                        style="@style/shiftName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:text="@string/the_day_before" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:fontFamily="@font/muli"
                                        android:src="@drawable/clock"
                                        android:textColor="@color/colorDarkGray"
                                        android:textSize="@dimen/_12ssp"
                                        app:tint="@color/colorDarkNavy" />

                                    <TextView
                                        android:id="@+id/txtFirstAlarmTime"
                                        style="@style/shiftName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:text="0:00 AM" />
                                </LinearLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:background="@drawable/bg_edit"
                                android:orientation="horizontal"
                                android:padding="@dimen/_2sdp">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:src="@drawable/music" />

                                <TextView
                                    android:id="@+id/txtFirstAlarmSound"
                                    style="@style/editText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:text="@string/default_sound" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/bg_layout"
                        android:orientation="vertical"
                        android:padding="@dimen/_6sdp">

                        <RelativeLayout
                            android:id="@+id/rlSecondAlarm"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/shiftName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/alarm_2" />

                            <CheckBox
                                android:id="@+id/cbSecondAlarm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:button="@drawable/custom_checkbox" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/llSecondAlarm"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8sdp">

                                    <LinearLayout
                                        android:id="@+id/llSecondBefore"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:orientation="horizontal">

                                        <CheckBox
                                            android:id="@+id/cbSecondBefore"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:button="@drawable/custom_checkbox" />

                                        <TextView
                                            style="@style/shiftName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_2sdp"
                                            android:text="@string/the_day_before" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/clock"
                                            app:tint="@color/colorDarkNavy" />

                                        <TextView
                                            android:id="@+id/txtSecondAlarmTime"
                                            style="@style/shiftName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_8sdp"
                                            android:text="0:00 AM" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:background="@drawable/bg_edit"
                                android:orientation="horizontal"
                                android:padding="@dimen/_2sdp">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:src="@drawable/music" />

                                <TextView
                                    android:id="@+id/txtSecondAlarmSound"
                                    style="@style/editText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:text="@string/default_sound" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@drawable/bg_layout"
                    android:orientation="vertical"
                    android:padding="@dimen/_6sdp">

                    <TextView
                        style="@style/shiftName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/incomes" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etSymbol"
                            style="@style/editText"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@drawable/bg_edit"
                            android:padding="@dimen/_2sdp"
                            android:textAlignment="center" />

                        <TextView
                            style="@style/shiftName"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_weight="1.0"
                            android:text="@string/coin_symbol" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etPerHour"
                            style="@style/editText"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@drawable/bg_edit"
                            android:inputType="numberDecimal"
                            android:padding="@dimen/_2sdp"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/txtPerHour"
                            style="@style/shiftName"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_weight="1.0"
                            android:text="@string/per_hour" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etExtraHour"
                            style="@style/editText"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@drawable/bg_edit"
                            android:inputType="numberDecimal"
                            android:padding="@dimen/_2sdp"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/txtExtraHour"
                            style="@style/shiftName"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_weight="1.0"
                            android:text="@string/per_extra_hour" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
</layout>