<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_12sdp"
    android:orientation="vertical"
>

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="0.0dip"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlue"
                android:fontFamily="@font/semi_bold"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="@string/time_and_incomes"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@color/colorLight"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/muli"
                    android:singleLine="true"
                    android:text="@string/extra_income"
                    android:textColor="@color/colorDarkNavy"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/etIncome"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_weight="1.5"
                    android:background="@drawable/bg_edit"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:tag="binding_1"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/txtSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:singleLine="true"
                    android:text="INR"
                    android:textColor="@color/colorDarkNavy"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFirstShift"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@color/colorLight"
                android:orientation="vertical"
                android:tag="binding_2">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/txtShiftName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:tag="binding_3"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_8sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/bg_round"
                            android:tag="binding_4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/muli"
                            android:tag="binding_5"
                            android:textSize="@dimen/_8ssp" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/muli"
                        android:text="@string/early_exit"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/etHour"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_edit"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:tag="binding_6"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:text="h"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/etMinute"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_edit"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:tag="binding_7"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:text="m"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/muli"
                        android:text="@string/extra_time2"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/etExtraHour"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_edit"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:tag="binding_8"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:text="h"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/etExtraMinute"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_edit"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:tag="binding_9"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:text="m"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:text="@string/paid_time"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <CheckBox
                        android:id="@+id/cbPaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:button="@drawable/custom_checkbox"
                        android:gravity="center"
                        android:tag="binding_10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSecondShift"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@color/colorLight"
                android:orientation="vertical"
                android:tag="binding_11">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/txtSecondShiftName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:tag="binding_12"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_8sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/bg_round"
                            android:tag="binding_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/muli"
                            android:tag="binding_14"
                            android:textSize="@dimen/_8ssp" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/muli"
                        android:text="@string/early_exit"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/etSecondHour"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_edit"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:tag="binding_15"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:text="h"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/etSecondMinute"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_edit"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:tag="binding_16"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:text="m"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/muli"
                        android:text="@string/extra_time2"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/etSecondExtraHour"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_edit"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:tag="binding_17"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:text="h"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/etSecondExtraMinute"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_edit"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:tag="binding_18"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:text="m"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSecondPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:text="@string/paid_time"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />

                    <CheckBox
                        android:id="@+id/cbSecondPaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:button="@drawable/custom_checkbox"
                        android:gravity="center"
                        android:tag="binding_19" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/llCancel"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="1.0"
                    android:background="@drawable/bg_btn_cancel"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semi_bold"
                        android:text="@string/cancel"
                        android:textAllCaps="true"
                        android:textColor="@color/colorDarkNavy"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOk"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_weight="1.0"
                    android:background="@drawable/bg_ok"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/semi_bold"
                        android:text="@string/ok"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>